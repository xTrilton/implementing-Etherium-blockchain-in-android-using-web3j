# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  # Request changes for new features that lack changelog updates.
  review_changelog: 
    if: 
      - {{ branch.name | includes(term="feature") }}
      - {{ files | match(regex=r/^docs\/changelog\.md$/) | nope }}
    run:
      - action: add-label@v1
        args:
          label: "‚ùó Incorrect Branch Name"
          color: {{ colors.yellow }}
      - action: close@v1
