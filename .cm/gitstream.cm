# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  enforce_branch_name: 
    if:  
      - {{ branch.name | match(regex=branchConvention.requiredPrefixes) | nope }}
    run:
      - action: add-label@v1
        args:
          label: "‚ùó Incorrect Branch Name"
      - action: close@v1

branchConvention:
  requiredPrefixes: r/^(feature|stable|fix)/
