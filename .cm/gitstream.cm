# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  review_new_terraform_module:
    if: 
       - true   
    run:
      - action: add-comment@v1
        args:
          comment: |            
             name: file name is {{ testfile }}
    
testfile: {{ branch.diff.files_metadata | map(attr='new_file')}}
