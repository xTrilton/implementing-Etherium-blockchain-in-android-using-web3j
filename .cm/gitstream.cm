# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
 {% for item in branches %}
  require_reviewers_{item.prefix}: 
    if:       
      - {{ branch.name | includes(term=item.prefix) }}
    run:
      - action: add-comment@v1
        args: 
          comment: | 
             This PR requires {{ item.requiredReviews }} reviews.
{% endfor %}

branches:
    - prefix: ABC
      requiredReviews: 2
    - prefix: XYZ
      requiredReviewers: 4
