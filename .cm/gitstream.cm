# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  #https://docs.gitstream.cm/automations/review-sensitive-files/
  review_javadoc:
    if:

      - {{ source.diff.files | matchDiffLines(regex=r/\/*\*([\s\S]*?)\//, ignoreWhiteSpaces=true) | every }}
      #- {{ source.diff.files | matchDiffLines(regex=r/\b(public|protected|private|static|final|synchronized)?\s+\w+\s+\w+\s*\(([^)]*)\)\s*\{/) | nope }}

    run:
      - action: add-label@v1
        args:
            label: "ðŸ““Javadoc Only"
            color: {{ colors.green }}
      - action: approve@v1
      
colors:
  green: '0e8a16'
