# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  review_new_terraform_module:
    if: 
      - true
    run:
      - action: request-changes@v1
        args:
          comment: |
            
          file name: {{ is.mainfile }}
    
is:
  mainfile: {{ branch.diff.files_metadata | map(attr='file')}}
