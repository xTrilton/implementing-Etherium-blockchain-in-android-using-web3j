# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  enforce_branch_name: 
    if:       
      - {{ branch.name | includes(list=branchConvention.requiredPrefixes) | nope }}
      - {{ branch.name | includes(regex=branchConvention.branchRegex) | nope}}
      - {{ branch.name | includes(list=branchConvention.ignoreList) | nope }}
    run:
      - action: add-label@v1
        args:
          label: "‚ùó Incorrect Branch Name"
      - action: close@v1

branchConvention:
  requiredPrefixes: ['feature', 'stable', 'fix']
  # This matches Jira ticket naming conventions, modify the regex to suit your project
  branchRegex: /\b\w+-\w+\b/
  ignoreList: [ 'development', 'staging' ]
