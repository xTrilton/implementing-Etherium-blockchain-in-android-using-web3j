# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  review_new_terraform_module:
    if: 
      - {{ files | extensions | match(term='ja' + testfile) | every }}
    run:
      - action: add-comment@v1
        args:
          comment: |            
             name: {{ is.mainfile }}
    
testfile: va
is:
  - mainfile: {{ branch.diff.files_metadata | map(attr='new_file')}}
