# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
 {% for item in branches %}
  require_additional_reviewers_branch_{item.prefix}: 
    if:       
      - {{ branch.name | includes(regex=item.prefix) }}
    run:
      - action: add-comment@v1
        args: 
          comment: | 
             This PR requires {{ item.requiredReviews }} reviews.
{% endfor %}
branches:
    - prefix: r/^ABC/
      requiredReviews: 2
    - prefix: r/^XYZ/
      requiredReviewers: 4
