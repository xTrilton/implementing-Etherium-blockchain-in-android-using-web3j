# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
  enforce_required_labels:  
    if: 
       - true
       #- {{ pr.labels | match(list=['Mobile', 'Core', 'Docs', 'Test']) | nope }}
    run:
      - action: add-label@v1
        args:
          label: "⚠️ Missing Required Labels"
          color: {{ colors.yellow }}
      - action: add-comment@v1
        args: 
          comment: | 
               All  {{pr.labels}}

colors:
  yellow: 'fbca04'
