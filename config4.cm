# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
 {% for item in branches %}
  require_additional_reviewers_branch_{item.prefix}: 
    if:       
      - {{ pr.target| match(regex=item.prefix) | some }}
    run:
      - action: add-comment@v1
        args: 
          comment: | 
             This PR requires {{ item.requiredReviews }} reviews.
{% endfor %}
branches:
    - prefix: r/ABC/
        requiredReviews: 2
    - prefix: XYZ
        requiredReviewers: 4
