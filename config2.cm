# -*- mode: yaml -*-
manifest:
  version: 1.0
automations:
 {% for item in teams %}
 enforce_branch_name_{item.name}: 
    if:  
      - {{ pr.author_teams | matches(list=item.name) | some }}
    run:
      - action: add-reviewers@v1
        args:
          reviewers: [fourth-organization/tech-writers] // edit this

      - action: close@v1

{% endfor %}
teams:
    - name: ui-team
        requiredReviews: 2
    - name: mobile-team
        requiredReviewers: 4
